<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminHomeActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_16dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_logout"
            android:layout_width="0dp"
            android:layout_height="68dp"
            android:layout_marginTop="16dp"
            android:padding="16dp"
            android:text="@string/logout"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="#000000"
            app:cornerRadius="32dp"
            app:layout_constraintBottom_toTopOf="@id/button_create_assembly_candidate"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.5" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_create_assembly_candidate"
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="@dimen/_8dp"
            android:padding="16dp"
            android:text="@string/create_assembly_candidate"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="#000000"
            app:cornerRadius="32dp"
            app:layout_constraintBottom_toTopOf="@id/button_create_parliment_candidate"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_logout" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_create_parliment_candidate"
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:layout_marginTop="@dimen/_8dp"
            android:layout_marginBottom="@dimen/_8dp"
            android:padding="16dp"
            android:text="@string/create_parliment_candidate"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="#000000"
            app:cornerRadius="32dp"
            app:layout_constraintBottom_toTopOf="@id/button_create_voter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_create_assembly_candidate" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_create_voter"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginTop="@dimen/_8dp"
            android:layout_marginBottom="@dimen/_8dp"
            android:padding="16dp"
            android:text="@string/create_voter"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="#000000"
            app:cornerRadius="32dp"
            app:layout_constraintBottom_toTopOf="@id/button_view_assembly_results"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_create_parliment_candidate" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_view_assembly_results"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginTop="@dimen/_8dp"
            android:layout_marginBottom="@dimen/_8dp"
            android:padding="16dp"
            android:text="@string/view_assembly_results"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="#000000"
            app:cornerRadius="32dp"
            app:layout_constraintBottom_toTopOf="@id/button_view_parliment_results"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_create_voter" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_view_parliment_results"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginTop="@dimen/_8dp"
            android:layout_marginBottom="@dimen/_8dp"
            android:padding="16dp"
            android:text="@string/view_parliment_results"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="#000000"
            app:cornerRadius="32dp"
            app:layout_constraintBottom_toTopOf="@id/button_time_configuration"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_view_assembly_results" />

        <!--        TODO : Show bottom Margin-->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_time_configuration"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginTop="@dimen/_8dp"
            android:layout_marginBottom="@dimen/_8dp"
            android:padding="16dp"
            android:text="Time Configuration"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="#000000"
            app:cornerRadius="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_view_parliment_results" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>