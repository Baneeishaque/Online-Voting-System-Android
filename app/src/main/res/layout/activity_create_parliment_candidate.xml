<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateAssemblyCandidateActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/CandidateForm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="@string/candidate_form"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="53dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="6dp"
            android:orientation="vertical"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="5dp">


            <TextView
                android:id="@+id/CandidateName"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:text="Candidate Name   :"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/EnterName"
                android:layout_width="211dp"
                android:layout_height="41dp"
                android:layout_gravity="right"
                android:background="@drawable/custom_edittext"
                android:ems="10"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:text=""
                android:textCursorDrawable="@color/black"
                app:backgroundTint="#11000000" />

            <TextView
                android:id="@+id/Address"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:text="Address                  :"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/EnterAddress"
                android:layout_width="211dp"
                android:layout_height="100dp"
                android:layout_gravity="right"
                android:background="@drawable/custom_edittext"
                android:inputType="textMultiLine"
                android:padding="10dp"
                android:textCursorDrawable="@color/black"
                app:backgroundTint="#11000000" />

            <TextView
                android:id="@+id/Dob"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:text="Date of Birth          :"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/datePickerButton"
                style="?android:spinnerStyle"
                android:layout_width="211dp"
                android:layout_height="43dp"
                android:layout_gravity="right"
                android:background="@drawable/custom_edittext"
                android:gravity="center_horizontal|center_vertical"
                android:onClick="openDatePicker"
                android:text="JAN 01 2021"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                app:backgroundTint="#11000000"
                tools:ignore="OnClick" />

            <TextView
                android:id="@+id/Age"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:text="Age                         :"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/EnterAge"
                android:layout_width="211dp"
                android:layout_height="41dp"
                android:layout_gravity="right"
                android:background="@drawable/custom_edittext"
                android:ems="10"
                android:inputType="number"
                android:padding="10dp"
                android:textCursorDrawable="@color/black"
                app:backgroundTint="#11000000" />

            <TextView
                android:id="@+id/Gender"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:text="Gender                   :"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/RadioGroup"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/male"
                    android:layout_width="77dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:buttonTint="@color/black"
                    android:text="Male" />

                <RadioButton
                    android:id="@+id/female"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:buttonTint="@color/black"
                    android:text="Female" />


                <RadioButton
                    android:id="@+id/other"
                    android:layout_width="79dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="@color/black"
                    android:text="Other" />

            </RadioGroup>

            <TextView
                android:id="@+id/MobileNumber"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:text="Mobile Number     :"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/EnterMobile"
                android:layout_width="211dp"
                android:layout_height="41dp"
                android:layout_gravity="right"
                android:background="@drawable/custom_edittext"
                android:ems="10"
                android:inputType="number"
                android:padding="10dp"
                android:textCursorDrawable="@color/black"
                app:backgroundTint="#11000000" />

            <TextView
                android:id="@+id/VoterId"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:text="Voter ID                 :"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/EnterVoterId"
                android:layout_width="211dp"
                android:layout_height="41dp"
                android:layout_gravity="right"
                android:background="@drawable/custom_edittext"
                android:ems="10"
                android:inputType="text"
                android:padding="10dp"
                android:textCursorDrawable="@color/black"
                app:backgroundTint="#11000000" />

            <TextView
                android:id="@+id/AadharNumber"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:text="Aadhar Number   :"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/EnterAadhar"
                android:layout_width="211dp"
                android:layout_height="41dp"
                android:layout_gravity="right"
                android:background="@drawable/custom_edittext"
                android:ems="10"
                android:inputType="number"
                android:padding="10dp"
                android:textCursorDrawable="@color/black"
                app:backgroundTint="#11000000" />

            <TextView
                android:id="@+id/PartyName"
                android:layout_width="180dp"
                android:layout_height="45dp"
                android:padding="10dp"
                android:text="Party Name          :"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner_parties"
                android:layout_width="211dp"
                android:layout_height="41dp"
                android:layout_gravity="right"
                android:background="@drawable/custom_edittext"
                app:backgroundTint="#11000000" />

            <TextView
                android:id="@+id/Parliament"
                android:layout_width="180dp"
                android:layout_height="70dp"
                android:padding="10dp"
                android:text="Parliament Constituencies    :"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner_parliament"
                android:layout_width="211dp"
                android:layout_height="41dp"
                android:layout_gravity="right"
                android:background="@drawable/custom_edittext"
                app:backgroundTint="#11000000" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_submit"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:text="submit"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                app:backgroundTint="#000000"
                app:cornerRadius="32dp" />

        </LinearLayout>

    </RelativeLayout>

</ScrollView>
